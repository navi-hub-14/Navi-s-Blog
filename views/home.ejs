<%- include("partials/header.ejs")  %>

<section id="home" class="section container">
    <h1 class="tag">Home</h1>
    <p class="content">
       <%= homeContent %>
    </p>
</section>

<section id="posts" class="section container">
   <%    posts.forEach((post)=>{  %>
      <h3 class="content day"><%= post.day %></h3>
      <h1 class="subtag inputTitle"><%= post.title %></h1><br>
   <p class="content">
       <%= post.input.slice(0,97)+"..." %> <a href="/posts/<%= post.title %>">Read More</a>
   </p>
   <%    }) %>
   
   </section>
</main>


